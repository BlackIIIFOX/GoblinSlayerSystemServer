<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="createEnums" author="paulrozhkin">
        <sql>
            CREATE TYPE "role" AS ENUM (
            'Admin',
            'Adventurer',
            'Customer',
            'Registrar',
            'RankPromoter' );

            CREATE TYPE "adventurer_status" AS ENUM (
            'Active',
            'Dead',
            'NotConfirmed'
            );

            CREATE TYPE "contract_status" AS ENUM (
            'Created',
            'Accepted',
            'Rejected',
            'Performing',
            'Performed',
            'Completed',
            'Canceled'
            );

            CREATE TYPE "rank" AS ENUM (
            'Platinum',
            'Gold',
            'Silver',
            'Bronze',
            'Ruby',
            'Emerald',
            'Sapphire',
            'Steel',
            'Obsidian',
            'Porcelain'
            );
        </sql>
    </changeSet>

    <changeSet id="createTable-files" author="paulrozhkin">
        <createTable schemaName="public"
                     tableName="files">
            <column name="id" type="serial" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="original_name" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="local_name" type="text">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="createTable-users" author="paulrozhkin">
        <createTable schemaName="public"
                     tableName="users">
            <column name="id" type="serial" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="login" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="avatar" type="integer">
                <constraints foreignKeyName="fk_users_files" references="files(id)"/>
            </column>
            <column name="name" type="text"/>
            <column name="address" type="text"/>
            <column name="role" type="role">
                <constraints nullable="false"/>
            </column>
            <column name="is_blocked" type="boolean" defaultValue="false">
                <constraints nullable="false"/>
            </column>
            <column name="adventurer_status" type="adventurer_status">
                <constraints nullable="false"/>
            </column>
            <column name="adventurer_experience" type="integer"/>
            <column name="adventurer_rank" type="rank">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <sql>
            alter table users alter column adventurer_status set default 'NotConfirmed'::adventurer_status;
            alter table users alter column adventurer_rank set default 'Porcelain'::rank;
        </sql>
    </changeSet>

    <changeSet id="createTable-contracts" author="paulrozhkin">
        <createTable schemaName="public"
                     tableName="contracts">
            <column name="id" type="serial" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="customer" type="integer">
                <constraints foreignKeyName="fk_contacts_contract_customer_users" references="users(id)"/>
            </column>
            <column name="executor" type="integer">
                <constraints foreignKeyName="fk_contacts_contract_executor_users" references="users(id)"/>
            </column>
            <column name="name" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="reward" type="integer">
                <constraints nullable="false"/>
            </column>
            <column name="min_rank" type="rank">
                <constraints nullable="false"/>
            </column>
            <column name="address" type="text"/>
            <column name="create_time" type="timestamp with time zone"/>
            <column name="status" type="contract_status">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="text"/>
            <column name="customer_comment" type="text"/>
            <column name="registrar_comment" type="text"/>
            <column name="closed_comment" type="text"/>
        </createTable>

        <sql>
            alter table contracts alter column min_rank set default 'Porcelain'::rank;
        </sql>
    </changeSet>
</databaseChangeLog>